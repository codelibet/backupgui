<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>

  <object class="GtkApplicationWindow" id="MainWindow">
    <property name="title">Backup GUI</property>
    <property name="default-width">650</property>
    <property name="default-height">350</property>

    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">10</property>
        <property name="margin">12</property>
        <property name="visible">True</property>

        <!-- TÍTULO -->
        <child>
          <object class="GtkLabel">
            <property name="label" translatable="yes">&lt;b&gt;Backup de Pastas&lt;/b&gt;</property>
            <property name="use-markup">True</property>
            <property name="xalign">0</property>
            <property name="visible">True</property>
          </object>
        </child>

        <!-- GRID PRINCIPAL -->
        <child>
          <object class="GtkGrid" id="grid_main">
            <property name="visible">True</property>
            <property name="row-spacing">10</property>
            <property name="column-spacing">10</property>

            <!-- Label Origens -->
            <child>
              <object class="GtkLabel">
                <property name="label">Origens:</property>
                <property name="xalign">0</property>
                <property name="visible">True</property>
              </object>
              <packing>
                <property name="left-attach">0</property>
                <property name="top-attach">0</property>
              </packing>
            </child>

            <!-- Caixa de Origens Dinâmicas -->
            <child>
              <object class="GtkBox" id="box_origens">
                <property name="visible">True</property>
                <property name="orientation">vertical</property>
                <property name="spacing">6</property>
                <property name="hexpand">True</property>
                <property name="vexpand">True</property>
              </object>
              <packing>
                <property name="left-attach">1</property>
                <property name="top-attach">0</property>
                <property name="width">2</property>
              </packing>
            </child>

            <!-- Label Destino -->
            <child>
              <object class="GtkLabel">
                <property name="label">Destino:</property>
                <property name="xalign">0</property>
                <property name="visible">True</property>
              </object>
              <packing>
                <property name="left-attach">0</property>
                <property name="top-attach">1</property>
              </packing>
            </child>

            <!-- Entry Destino -->
            <child>
              <object class="GtkEntry" id="entry_destino">
                <property name="visible">True</property>
                <property name="hexpand">True</property>
              </object>
              <packing>
                <property name="left-attach">1</property>
                <property name="top-attach">1</property>
              </packing>
            </child>

            <!-- Botão Selecionar Destino -->
            <child>
              <object class="GtkButton" id="btn_destino">
                <property name="label">Selecionar</property>
                <property name="visible">True</property>
              </object>
              <packing>
                <property name="left-attach">2</property>
                <property name="top-attach">1</property>
              </packing>
            </child>

            <!-- Botão Backup -->
            <child>
              <object class="GtkButton" id="btn_backup">
                <property name="label">Fazer Backup</property>
                <property name="visible">True</property>
              </object>
              <packing>
                <property name="left-attach">1</property>
                <property name="top-attach">2</property>
              </packing>
            </child>

            <!-- Label Status -->
            <child>
              <object class="GtkLabel" id="lbl_status">
                <property name="visible">True</property>
                <property name="xalign">0</property>
                <property name="label">Status: Aguardando…</property>
              </object>
              <packing>
                <property name="left-attach">0</property>
                <property name="top-attach">3</property>
                <property name="width">3</property>
              </packing>
            </child>

            <!-- Barra de Progresso -->
            <child>
              <object class="GtkProgressBar" id="progressbar_backup">
                <property name="visible">True</property>
                <property name="hexpand">True</property>
                <property name="show-text">True</property>
              </object>
              <packing>
                <property name="left-attach">0</property>
                <property name="top-attach">4</property>
                <property name="width">3</property>
              </packing>
            </child>

          </object>
        </child>

      </object>
    </child>

  </object>
</interface>
